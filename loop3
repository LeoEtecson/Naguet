    <h1> Numeros pares entre 100 e 1</h1>
    <span id="coisa"></span>
    <script>
        let numero = 100;
        while (numero > 1) {
            document.getElementById("coisa").innerHTML += numero + "<br>"
            numero = numero - 2
        }
    </script>
